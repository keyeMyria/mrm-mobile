<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/imagebutton_setup_selection_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/image_holder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_setup_selection_item_image"
        android:layout_width="wrap_content"
        android:background="@drawable/btn_meeting_room"
        android:textColor="@drawable/btn_meeting_room_text_state"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_setup_selection_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:text="Item text"
        style="@style/seven_inch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_setup_selection_item_image"/>

</android.support.constraint.ConstraintLayout>